<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item_meal"
    style="@style/meal_item_root">

    <ImageView
        android:id="@+id/iv_meal_profile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_item_meal_icon"
        android:src="@drawable/sleeping_cat"
        app:layout_constraintBottom_toBottomOf="@+id/tv_meal_person"
        app:layout_constraintEnd_toStartOf="@+id/tv_meal_person"
        app:layout_constraintTop_toTopOf="@+id/tv_meal_person" />

    <TextView
        android:id="@+id/tv_meal_person"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="엄마"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_meal_time" />

    <TextView
        android:id="@+id/tv_meal_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="13:00"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_meal_person"
        app:layout_constraintStart_toStartOf="@+id/iv_meal_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_meal_title"
        style="@style/meal_item_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="아침" />

</androidx.constraintlayout.widget.ConstraintLayout>


